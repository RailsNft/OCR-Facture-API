# Clé secrète pour l'authentification RapidAPI (obtenue lors de la création de l'API sur RapidAPI)
RAPIDAPI_PROXY_SECRET=your_rapidapi_proxy_secret_here

# Mode debug (True pour développement local, False pour production)
DEBUG_MODE=True

# Langue par défaut pour OCR
DEFAULT_LANGUAGE=fra

# Clé API Sirene (Insee) pour enrichissement SIREN/SIRET (optionnel)
# Option 1 : OAuth2 avec Client ID + Certificate (recommandé pour nouveaux plans)
# IMPORTANT : Cochez "Client Credentials" dans les types de droits autorisés lors de la création de l'application
SIRENE_CLIENT_ID=optional
SIRENE_CLIENT_CERTIFICATE=/chemin/vers/certificat.pem
# Option 2 : Consumer Key/Secret (ancien système)
SIRENE_API_KEY=optional
SIRENE_API_SECRET=optional

# Redis (optionnel - utilise cache mémoire si non configuré)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
FORCE_MEMORY_CACHE=False

